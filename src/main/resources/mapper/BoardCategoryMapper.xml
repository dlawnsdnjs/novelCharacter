<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.novelcharacter.mapper.BoardCategoryMapper">
    <insert id="insertBoardCategory" useGeneratedKeys="true" keyProperty="boardId" parameterType="BoardCategoryDTO">
        INSERT INTO boardcategory (boardName) VALUES (#{boardName});
    </insert>

    <select id="selectAllBoardCategory" resultType="BoardCategoryDTO">
        SELECT * FROM boardcategory;
    </select>

    <update id="updateBoardCategory" parameterType="BoardCategoryDTO">
        UPDATE boardcategory SET boardName = #{boardName} WHERE boardId=#{boardId};
    </update>

    <delete id="deleteBoardCategory">
        DELETE FROM boardcategory WHERE boardId=#{boardId};
    </delete>


</mapper>