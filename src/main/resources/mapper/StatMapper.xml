<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.novelcharacter.mapper.StatMapper">
    <insert id="insertStat" useGeneratedKeys="true" keyProperty="statCode" parameterType="StatDTO">
        INSERT INTO Stat (
        statName
        ) VALUES (
        #{statName}
        );
    </insert>

    <insert id="insertStatList" useGeneratedKeys="true" keyProperty="statCode" parameterType="StatDTO">
        INSERT INTO Stat (statName)
        VALUES
            <foreach collection="list" item="stat" separator=",">
            (#{stat.statName})
            </foreach>
    </insert>

    <select id="selectStatList" resultType="StatDTO">
        SELECT *
        FROM Stat
        WHERE statName IN
        <foreach item="statName" collection="list" open="(" separator="," close=")">
            #{statName}
        </foreach>
    </select>

    <select id="selectStat" resultType="StatDTO">
        SELECT * FROM Stat WHERE statCode = #{statCode};
    </select>

    <select id="selectStatByName" resultType="StatDTO">
        SELECT * FROM Stat WHERE statName = #{statName};
    </select>

    <update id="updateStat" parameterType="StatDTO">
        UPDATE
            Stat
        SET
            statName = #{statName}
        WHERE
            statCode = #{statCode};
    </update>

    <delete id="deleteStat" >
        DELETE FROM Stat WHERE statCode = #{statCode};
    </delete>
</mapper>